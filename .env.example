# ── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://finbot:finbot@localhost:5432/finbot
# Required by docker-compose.prod.yml for the PostgreSQL container
POSTGRES_PASSWORD=changeme

# ── Telegram ──────────────────────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
# Comma-separated list of Telegram user IDs allowed to use the bot
ALLOWED_TELEGRAM_USER_IDS=[123456789,987654321]

# ── Local LLM (Ollama) ───────────────────────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b-instruct-q4_K_M

# ── Fallback LLM (paid API) ──────────────────────────────────────────────────
# Provider: "anthropic" or "openai"
FALLBACK_LLM_PROVIDER=anthropic
FALLBACK_LLM_MODEL=claude-3-5-haiku-latest
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ── Categories ────────────────────────────────────────────────────────────────
# Comma-separated default expense categories (seeded into DB on first boot)
# DEFAULT_CATEGORIES=clothing,coffee,dining,education,entertainment,gas,gifts,groceries,health,home,insurance,personal,subscriptions,transport,travel,utilities

# ── General ───────────────────────────────────────────────────────────────────
DEFAULT_CURRENCY=ILS
ASSUME_HALF_SPLIT=false
DEBUG=false
